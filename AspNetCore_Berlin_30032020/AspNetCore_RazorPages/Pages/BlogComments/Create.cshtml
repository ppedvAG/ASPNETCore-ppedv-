@page
@model AspNetCore_RazorPages.Pages.BlogComments.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comment.Text" class="control-label"></label>
                <input asp-for="Comment.Text" class="form-control" />
                <span asp-validation-for="Comment.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.CreatedAt" class="control-label"></label>
                <input asp-for="Comment.CreatedAt" class="form-control" />
                <span asp-validation-for="Comment.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.CreatedBy" class="control-label"></label>
                <input asp-for="Comment.CreatedBy" class="form-control" />
                <span asp-validation-for="Comment.CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.BlogId" class="control-label"></label>
                <select asp-for="Comment.BlogId" class ="form-control" asp-items="ViewBag.BlogId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
