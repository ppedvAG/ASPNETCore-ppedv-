@page "/Calc1/{handler?}"
@model AspNetCore_RazorPages.Pages.Modul03.Calc1Model
@{
    ViewData["Title"] = "Calc1";
}

<h1>Calc1</h1>

<form method="post">
    <input name="eins" /><br />
    <input name="zwei" /><br />
