@page
@model AspNetCore_RazorPages.Pages.Aufgaben.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Aufgabe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Aufgabe.Id" />
            <div class="form-group">
                <label asp-for="Aufgabe.AufgabenName" class="control-label"></label>
                <input asp-for="Aufgabe.AufgabenName" class="form-control" />
                <span asp-validation-for="Aufgabe.AufgabenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aufgabe.AufgabeBis" class="control-label"></label>
                <input asp-for="Aufgabe.AufgabeBis" class="form-control" />
                <span asp-validation-for="Aufgabe.AufgabeBis" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Aufgabe.IstFertig" /> @Html.DisplayNameFor(model => model.Aufgabe.IstFertig)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
