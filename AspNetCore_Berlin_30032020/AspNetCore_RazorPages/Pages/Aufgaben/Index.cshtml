@model AspNetCore_RazorPages.Pages.Aufgaben.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Aufgabe[0].AufgabenName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aufgabe[0].AufgabeBis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aufgabe[0].IstFertig)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Aufgabe) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AufgabenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AufgabeBis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IstFertig)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
